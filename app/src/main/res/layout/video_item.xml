<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="7dp"
        android:layout_margin="2dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:padding="16dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/video_frame"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <VideoView
                    android:id="@+id/item_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/video_upload_btn"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_publish_black_24dp"
                    android:layout_gravity="center"
                    android:background="@android:drawable/screen_background_light_transparent"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_alignStart="@+id/video_frame"
                android:layout_alignLeft="@+id/video_frame"
                android:layout_alignEnd="@+id/video_frame"
                android:layout_alignRight="@+id/video_frame"
                android:layout_below="@+id/video_frame"
                android:id="@+id/item_description_layout"
                android:weightSum="2">

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="0dp"
                    android:layout_weight="1.6"
                    android:textSize="18sp"
                    android:text="This describes the video"
                    android:textColor="@color/black_text"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/video_share"
                    android:src="@android:drawable/ic_menu_share"
                    android:background="@android:color/transparent"
                    android:layout_gravity="bottom|end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_uploaded_by"
                android:layout_alignStart="@+id/video_frame"
                android:layout_alignLeft="@+id/video_frame"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_alignEnd="@+id/video_frame"
                android:layout_alignRight="@+id/video_frame"
                android:layout_below="@+id/item_description_layout"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>